{
    "name": "layout",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "projects/layout",
    "projectType": "library",
    "prefix": "tui",
    "implicitDependencies": ["!testing"],
    "targets": {
        "build": {
            "executor": "@angular-devkit/build-angular:ng-packagr",
            "outputs": ["{workspaceRoot}/dist/layout"],
            "options": {
                "tsConfig": "tsconfig.build.json",
                "project": "projects/layout/ng-package.json"
            },
            "dependsOn": [
                {
                    "target": "build",
                    "params": "forward",
                    "dependencies": true
                }
            ]
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/layout"],
            "options": {
                "jestConfig": "jest.config.ts",
                "coverageDirectory": "coverage/layout",
                "collectCoverageFrom": ["<rootDir>/projects/layout/**/*.ts"],
                "testMatch": ["<rootDir>/projects/layout/**/*.spec.ts"]
            }
        },
        "publish": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "cp ./LICENSE ./dist/layout",
                    "ts-node ./scripts/publish.ts --path ./dist/layout --dry-run {args.dry-run} --customVersion {args.customVersion} --customTag {args.customTag}"
                ],
                "parallel": false
            }
        }
    }
}
