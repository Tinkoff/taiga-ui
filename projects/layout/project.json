{
    "name": "layout",
    "root": "projects/layout",
    "sourceRoot": "projects/layout",
    "projectType": "library",
    "prefix": "tui",
    "implicitDependencies": ["!testing"],
    "architect": {
        "lint": {
            "executor": "nx:run-commands",
            "options": {
                "command": "eslint --no-error-on-unmatched-pattern \"**/projects/layout/**/*\""
            }
        },
        "stylelint": {
            "executor": "nx:run-commands",
            "options": {
                "command": "stylelint \"**/layout/**/*.{css,less}\" --allow-empty-input"
            }
        },
        "build": {
            "builder": "@angular-devkit/build-ng-packagr:build",
            "outputs": ["dist/layout"],
            "options": {
                "tsConfig": "tsconfig.build.json",
                "project": "projects/layout/ng-package.json"
            },
            "dependsOn": [
                {
                    "target": "build",
                    "projects": "dependencies",
                    "params": "forward"
                }
            ]
        },
        "test": {
            "builder": "@angular-devkit/build-angular:karma",
            "outputs": ["coverage/layout"],
            "options": {
                "main": "projects/layout/test.ts",
                "tsConfig": "projects/layout/tsconfig.spec.json",
                "karmaConfig": "projects/layout/karma.conf.js",
                "stylePreprocessorOptions": {
                    "includePaths": ["projects/core/styles"]
                }
            }
        },
        "publish": {
            "builder": "@nrwl/workspace:run-commands",
            "options": {
                "command": "ts-node ./scripts/publish.ts --path ./dist/layout --dry-run {args.dry-run}"
            }
        }
    }
}
